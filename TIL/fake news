  <div id="score">ì ìˆ˜: 0</div>
  <div id="timer">ë‚¨ì€ ì‹œê°„: 10ì´ˆ</div>

  <script>
    const headlines = [
      { text: "ì„¸ê³„ ìµœì´ˆì˜ ìš°ì£¼ í–„ë²„ê±° ë°°ë‹¬ ì„±ê³µ", isReal: false },
      { text: "êµ¬ê¸€, ì¸ê³µì§€ëŠ¥ìœ¼ë¡œ ëƒ„ìƒˆ ì¸ì‹ ê¸°ìˆ  ê°œë°œ", isReal: true },
      { text: "ì„œìš¸ì‹œ, ëª¨ë“  ê³ ì–‘ì´ì—ê²Œ ì£¼ë¯¼ë“±ë¡ì¦ ë°œê¸‰ ì¶”ì§„", isReal: false },
      { text: "í”„ë‘ìŠ¤, ë¹µ ë°°ë‹¬ìš© ë“œë¡  ì •ì‹ í—ˆìš©", isReal: true },
      { text: "AIê°€ ë§Œë“  ì†Œì„¤, ë¬¸í•™ìƒ ìˆ˜ìƒ", isReal: true },
      { text: "2030ë…„ê¹Œì§€ ì§€êµ¬ ìì „ ì†ë„ 2ë°°ë¡œ ì¦ê°€ ì˜ˆì¸¡", isReal: false }
    ];

    const headlineEl = document.getElementById("headline");
    const buttons = document.querySelectorAll("button");
    const scoreEl = document.getElementById("score");
    const timerEl = document.getElementById("timer");

    let currentIndex = 0;
    let score = 0;
    let timeLeft = 10;
    let countdown;

    function showNextHeadline() {
      if (currentIndex >= headlines.length) {
        headlineEl.textContent = "ê²Œì„ ì¢…ë£Œ!";
        scoreEl.textContent = `ìµœì¢… ì ìˆ˜: ${score} / ${headlines.length}`;
        buttons.forEach(btn => btn.disabled = true);
        timerEl.textContent = "";
        return;
      }

      timeLeft = 10;
      timerEl.textContent = `ë‚¨ì€ ì‹œê°„: ${timeLeft}ì´ˆ`;
      headlineEl.textContent = headlines[currentIndex].text;
      countdown = setInterval(updateTimer, 1000);
    }

    function updateTimer() {
      timeLeft--;
      timerEl.textContent = `ë‚¨ì€ ì‹œê°„: ${timeLeft}ì´ˆ`;
      if (timeLeft <= 0) {
        clearInterval(countdown);
        currentIndex++;
        showNextHeadline();
      }
    }

    buttons.forEach(button => {
      button.addEventListener("click", () => {
        clearInterval(countdown);
        const choice = button.classList.contains("real");
        if (choice === headlines[currentIndex].isReal) {
          score++;
        }
        scoreEl.textContent = `ì ìˆ˜: ${score}`;
        currentIndex++;
        showNextHeadline();
      });
    });

    showNextHeadline();
